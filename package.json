{
  "name": "typescript-npm",
  "version": "1.0.0",
  "description": "typescript-npm boilerplate",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhnpd/typescript-npm.git"
  },
  "keywords": [
    "typescript"
  ],
  "author": "mhnpd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mhnpd/typescript-npm/issues"
  },
  "homepage": "https://github.com/mhnpd/typescript-npm#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.1",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
